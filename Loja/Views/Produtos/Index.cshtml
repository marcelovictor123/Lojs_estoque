@model IEnumerable<Loja.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Itens</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Item</a>
</p>


<table id="table-produtos" class="table">
    
    <thead>
        <tr>
            
             <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Editar</a> |
                   <!-- <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id">Details</a> |-->
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>

        